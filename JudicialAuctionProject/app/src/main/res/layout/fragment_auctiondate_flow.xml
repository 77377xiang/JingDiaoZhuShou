<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/inclued_time"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#b0b0b0" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/zong_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/zong_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:text="总额"
                    android:textColor="#686868"
                    android:textSize="13sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:gravity="center|right"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/zong_unmber_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|left"
                        android:text="150000"
                        android:textColor="#686868"
                        android:textSize="13sp" />

                    <ImageView

                        android:id="@+id/zong_groupIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginLeft="16dp"
                        android:contentDescription="@null"
                        android:src="@mipmap/h_h_browser" />

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#b0b0b0" />

            <com.yude.auctionhelp.views.view.NoScrollListView
                android:id="@+id/list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#b0b0b0" />


            <LinearLayout
                android:id="@+id/one_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/one_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:text="一拍"
                    android:textColor="#686868"
                    android:textSize="13sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:gravity="center|right"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/one_unmber_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|left"
                        android:text="150000"
                        android:textColor="#686868"
                        android:textSize="13sp" />

                    <ImageView

                        android:id="@+id/one_groupIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginLeft="16dp"
                        android:contentDescription="@null"
                        android:src="@mipmap/h_h_browser" />

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#b0b0b0" />

            <com.yude.auctionhelp.views.view.NoScrollListView
                android:id="@+id/list_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#b0b0b0" />


            <LinearLayout
                android:id="@+id/two_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/two_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:text="二拍"
                    android:textColor="#686868"
                    android:textSize="13sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:gravity="center|right"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/two_unmber_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|left"
                        android:text="150000"
                        android:textColor="#686868"
                        android:textSize="13sp" />

                    <ImageView

                        android:id="@+id/two_groupIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginLeft="16dp"
                        android:contentDescription="@null"
                        android:src="@mipmap/h_h_browser" />

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#b0b0b0" />

            <com.yude.auctionhelp.views.view.NoScrollListView
                android:id="@+id/list_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#b0b0b0" />

            <LinearLayout
                android:id="@+id/sell_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sell_groupto_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:text="变卖"
                    android:textColor="#686868"
                    android:textSize="13sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:gravity="center|right"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/sell_unmber_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|left"
                        android:text="150000"
                        android:textColor="#686868"
                        android:textSize="13sp" />

                    <ImageView

                        android:id="@+id/sell_groupIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginLeft="16dp"
                        android:contentDescription="@null"
                        android:src="@mipmap/h_h_browser" />

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#b0b0b0" />

            <com.yude.auctionhelp.views.view.NoScrollListView
                android:id="@+id/list_sell"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#b0b0b0" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>